<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |error| %>
   
    <p class="text-danger">
      <%= error%>
    </p>
  <% end %>
<% end %>


<%= form_for @post do |f| %>
    <%= f.label "Title" %>
    <%= f.text_field :title %><br />
    <%= f.label "Author" %>
    <%= f.text_field :author %><br />
    <%= f.label "Content" %>
    <%= f.text_field :content %><br />
    
    
    <%= f.collection_check_boxes(:tag_ids, @tags, :id, :name) do |b| %>
            <%= b.check_box %>
            <%= b.label %>
        <% end %>
    <%= f.submit "GO!" %>
<% end %>